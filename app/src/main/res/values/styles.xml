<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TransparentTheme.NoActionBar" parent="AppTheme.NoActionBar">
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextRowTitleAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextRowHeaderTitleAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextRowHeaderTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextRowNewsTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextRowTimeAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TextDetailsHeaderTitleAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="TextAuthorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSourceAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="TextDescriptionAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextContentAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
